#!/bin/bash

if [ $# -ne 1 ]; then
  echo "Usage: $0 <port>"
  exit 1
fi

port="$1"

# Find the process using the specified port
process=$(lsof -i :$port | awk 'NR==2{print $2}')

if [ -z "$process" ]; then
  echo "No process found using port $port"
  exit 1
fi

# Kill the process
kill -9 "$process"

echo "Process $process using port $port has been terminated."
