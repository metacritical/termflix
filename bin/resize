#!/bin/bash

for img in *.$1; do
  width=$(sips -g pixelWidth "$img" | tail -n 1 | awk '{print $2}')
  height=$(sips -g pixelHeight "$img" | tail -n 1 | awk '{print $2}')
  new_width=$(echo "$width * $2" | bc)
  new_height=$(echo "$height * $2" | bc)
  sips -z $new_height $new_width "$img"
  echo "Resized $img to ${new_width}x${new_height}"
done
