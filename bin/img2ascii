#!/bin/bash

# img2ascii.sh - Convert any image to ASCII using ImageMagick + jp2a

if [ $# -ne 1 ]; then
    echo "Usage: $0 <image-file>"
    exit 1
fi

IMAGE="$1"

if [ ! -f "$IMAGE" ]; then
    echo "Error: File '$IMAGE' does not exist."
    exit 1
fi

# Use magick instead of convert
magick "$IMAGE" jpg:- | jp2a - --width=76 --output=assets/anton_volkov.ascii


